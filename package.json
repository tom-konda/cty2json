{
  "name": "@tom-konda/cty2json",
  "bin": {
    "cty2json": "bin/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tom-konda/cty2json.git"
  },
  "keywords": [
    "micropolis",
    "json",
    "convert"
  ],
  "types": "./declaration/cty2json/index.d.ts",
  "version": "1.0.5",
  "description": "This JavaScript library converts from .cty file (Micropolis format) to JSON.",
  "main": "index.js",
  "scripts": {
    "prepublishOnly": "npm run build",
    "prebuild": "npm run clean",
    "build": "npm-run-all lint test --parallel ts:build-* --serial rollup:*-banner test:cli",
    "postbuild": "npm run doc-gen",
    "clean": "node -e \"require('shelljs').rm('-R', ['./bin','./lib', './doc', './temp']);\"",
    "ts:build-bin": "tsc -p ./src/ts/bin",
    "ts:build-lib": "tsc -p ./src/ts/lib",
    "rollup:lib-banner": "rollup -c ./rollup-configs/rollup.config.js",
    "rollup:cli-banner": "rollup -c ./rollup-configs/rollup.cli-banner.config.js",
    "doc-gen": "typedoc --excludeExternals",
    "lint": "eslint src/**/*.ts",
    "test": "jest --config ./jest.config.mjs ./tests/unit",
    "test:cli": "jest --config ./jest.config.mjs ./tests/e2e"
  },
  "author": "Tom Konda",
  "license": "GPL-3.0",
  "engines": {
    "node": ">=12.13.0"
  },
  "directories": {
    "test": "src/test/"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.24",
    "@types/tmp": "^0.2.0",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "cross-env": "^7.0.3",
    "eslint": "^7.19.0",
    "jest": "^26.6.3",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.38.4",
    "shelljs": "^0.8.4",
    "tmp": "^0.2.1",
    "ts-jest": "^26.5.0",
    "typedoc": "^0.20.20",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "commander": "^7.0.0"
  }
}
