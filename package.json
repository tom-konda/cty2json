{
  "name": "@tom-konda/cty2json",
  "bin": {
    "cty2json": "bin/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tom-konda/cty2json.git"
  },
  "keywords": [
    "micropolis",
    "json",
    "convert"
  ],
  "types": "./declaration/cty2json/index.d.ts",
  "version": "1.0.3",
  "description": "This JavaScript library converts from .cty file (Micropolis format) to JSON.",
  "main": "index.js",
  "scripts": {
    "prebuild": "npm run clean",
    "build": "npm-run-all lint test --parallel ts:build-* --serial rollup:*-banner rollup:trans-* test:cli",
    "postbuild": "npm run doc-gen",
    "clean": "node -e \"require('shelljs').rm('-R', ['./bin','./lib', './doc', './index.js']);\"",
    "ts:build-bin": "tsc -p ./src/ts/bin",
    "ts:build-lib": "tsc -p ./src/ts/lib",
    "rollup:lib-banner": "rollup -c ./rollup-configs/rollup.config.js",
    "rollup:cli-banner": "rollup -c ./rollup-configs/rollup.cli-banner.config.js",
    "rollup:trans-node": "rollup -c ./rollup-configs/rollup.config.cjs.js",
    "rollup:trans-legacy-browser": "rollup -c ./rollup-configs/rollup.legacy.config.js",
    "doc-gen": "typedoc --name Cty2JSON --readme ./README.md --excludeExternals --target es2015 --module es2015 --includeDeclarations --out ./doc ./declaration/cty2json/index.d.ts",
    "lint": "tslint -c ./tslint.json src/**/*.ts",
    "test": "cross-env TS_NODE_TRANSPILE_ONLY=1 mocha --require espower-typescript/guess src/test/unit/**.ts",
    "test:cli": "cross-env TS_NODE_TRANSPILE_ONLY=1 mocha --require espower-typescript/guess src/test/e2e/**.ts"
  },
  "author": "Tom Konda",
  "license": "GPL-3.0",
  "engines": {
    "node": ">=8.0.0"
  },
  "directories": {
    "test": "src/test/"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.7",
    "@types/node": "10",
    "@types/power-assert": "^1.5.0",
    "@types/tmp": "^0.1.0",
    "cross-env": "^5.2.0",
    "espower-typescript": "^9.0.2",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.5",
    "power-assert": "^1.6.1",
    "rollup": "^1.16.7",
    "rollup-plugin-buble": "^0.19.8",
    "shelljs": "^0.8.3",
    "tmp": "^0.1.0",
    "tslint": "^5.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "commander": "^2.20.0"
  }
}
