{
  "rulesDirectory": "node_modules/tslint-eslint-rules/dist/rules",
  "rules": {
    "indent": [
      true,
      "spaces"
    ],
    "no-var-keyword": true,
    "no-var-requires": true,
    "no-consecutive-blank-lines" : true,
    "no-constant-condition": true,
    "no-trailing-whitespace": true,
    "no-unreachable": true,
    "no-unused-variable":true,
    "use-strict" : [
      true,
      "check-function"
    ],
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "triple-equals" : [
      true
    ],
    "whitespace": [
      "check-branch",
      "check-operator",
      "check-separator"
    ]
  }
}